<div class="index">
  <div class = "featured-image-container">
  </div>
  <div class="container">
    <div class="row">
      <div class="col-6">
        <div class="row">
          <% @infrastructures.each do |infra| %>

          <div class="col-6">
            <div class="card" >
              <%= image_tag "https://cldup.com/aSepe6mewy-3000x3000.jpeg", alt: "alttext", class: "featured-image" %>
              <div class="card-body">
                <h5 class="card-title"><%= infra.name %></h5>
                <p class="card-text"><%= infra.detail %></p>
                <%= link_to "More details", infrastructure_path(infra.id), class:"btn btn-primary"%>
              </div>
            </div>
          </div>
          <% end %>
        </div>
      </div>
      <div class="col-6">
        <div id="map-container">
          <div id="map-canvas">
<div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

